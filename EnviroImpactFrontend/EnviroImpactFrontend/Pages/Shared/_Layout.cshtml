<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EnviroImpactFrontend</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/EnviroImpactFrontend.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    <header>
        <nav class="navbar navbar-dark" style="background: linear-gradient(to right, #007BBA, #00B8D4); height: 80px;">
            <div class="container-fluid d-flex justify-content-between align-items-center px-4">
                <!-- Centered Title -->
                <span class="navbar-brand mb-0 h1 text-white fw-bold shadow-text position-absolute start-50 translate-middle-x" style="font-size: 3rem;">
                    Enviro Impact Tracker
                </span>

                <!-- Burger Menu (Left-Aligned) -->
                <div class="dropdown">
                    <button class="btn text-white" type="button" id="menuButton" data-bs-toggle="dropdown" aria-expanded="false">
                        <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" fill="white" class="bi bi-list" viewBox="0 0 16 16">
                            <path fill-rule="evenodd" d="M2.5 12.5a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1h-10a.5.5 0 0 1-.5-.5zm0-4a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1h-10a.5.5 0 0 1-.5-.5zm0-4a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1h-10a.5.5 0 0 1-.5-.5z" />
                        </svg>
                    </button>
                    <ul class="dropdown-menu mt-2" aria-labelledby="menuButton">
                        <li><a class="dropdown-item" asp-page="/Calculate">Calculate</a></li>
                        <li><a class="dropdown-item" asp-page="/About">About</a></li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main role="main" class="main-content-wrapper">
        @RenderBody()
    </main>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - EnviroImpactFrontend - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <!-- 🧠 Chart.js must be loaded before calculate.js -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/calculate.js"></script>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
                const tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
                tooltipTriggerList.map(function (tooltipTriggerEl) {
                    return new bootstrap.Tooltip(tooltipTriggerEl)
                })
            });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
